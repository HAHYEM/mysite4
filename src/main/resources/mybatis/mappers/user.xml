<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="user">
	
	<select id="selectUserByEmailPW" parameterType="map" resultType="com.javaex.vo.UserVo">
		<![CDATA[
			SELECT no, name 
			FROM users 
			WHERE email = #{email}
			AND password = #{password}
		]]>
	</select>
	
	<select id="selectUserByNo" parameterType="int" resultType="com.javaex.vo.UserVo">
		<![CDATA[
			SELECT no, name, email, password, gender 
			FROM users 
			WHERE no = #{no}
		]]>
	</select>
	
	<select id="insertUser" parameterType="com.javaex.vo.UserVo">
		<![CDATA[
			INSERT INTO users 
			VALUES (seq_users_no.nextval, #{name}, #{email}, #{password}, #{gender})
		]]>
	</select>
	
	<select id="updateUser" parameterType="com.javaex.vo.UserVo">
		<![CDATA[
			UPDATE users 
			SET name = #{name}, 
				password = #{password}, 
				gender = #{gender}
			WHERE no = #{no}
		]]>
	</select>
	
</mapper>
	